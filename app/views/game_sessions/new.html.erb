<div class="form-new row justify-content-center py-3">
  <div class="col-6">
    <h2 class="m-4 text-center text-warning font-weight-bold">Create session</h2>
    <%= simple_form_for @game_session do |f| %>
      <%= f.input :game_id, collection: Game.all %>
      <%= f.input :session_name %>
      <%= f.input :description %>
      <%= f.input :address %>
      <div class="d-flex">
        <%= f.input :date, as: :date, html5: true %>
        <%= f.input :start_time, as: :time %>
      </div>
      <p>Additional info:</p>
      <%= f.input :is_family_friendly, label: ('<i class="fa fa-child" aria-hidden="true"></i> Family Friendly').html_safe %>
      <%= f.input :is_smoke_free, label: ('<i class="fas fa-smoking-ban"></i> Smoke Free').html_safe %>
      <%= f.input :has_food, label: ('<i class="fas fa-utensils"></i> Food').html_safe %>
      <%= f.input :has_drinks, label: ('<i class="fas fa-cocktail"></i> Drinks').html_safe %>
      <%= f.input :is_recurrent, label: ('<i class="fa fa-calendar" aria-hidden="true"></i> Recurrent (E.g.: weekly or monthly)').html_safe %>
      <%= f.input :capacity, :label => "Spaces available" %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Create session", class: "btn btn-flat" %>
    <% end %>
  </div>
</div>
