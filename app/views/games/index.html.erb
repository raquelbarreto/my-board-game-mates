<div class="container">

  <div class="search d-flex align-items-center p-3">
    <div class="w-25">
      <%= form_tag games_path, method: :get do %>
      <%= text_field_tag :game_name,
        params[:game_name],
        class: "form-control",
        placeholder: "Search for a game"
      %>
      <%= select_tag :game_category,
        options_for_select(Game::CATEGORIES, params[:game_category]),
        include_blank:"any",
        class: "form-control",
        placeholder: "Search for a category"
      %>
    </div>
    <div class="pl-3">
      <%= submit_tag "Search", class: "btn btn-flat" %>
    </div>
    <% end %>
  </div> 

  <div class="d-flex flex-wrap justify-content-between mb-4 py-2">
    <% @games.each do |game| %>
      <div class="card d-flex justify-content-between flex-column mb-4" style="width: 250px;">
        <% if game.photo.attached? %>
            <%= cl_image_tag game.photo.key, class: "game-img"%>
        <% else %>
        <% end %>
        <div class="game-info py-4 px-4">
          <div><h5><%= game.name %></h5></div>
          <div class="badge badge-warning"> <%= game.category %></div>
          <div> <%= link_to "Know more", game_path(game.id), class: "btn btn-details" %></div>
          <div> <%= link_to "See open sessions", game_path(game.id), class: "btn btn-details" %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
