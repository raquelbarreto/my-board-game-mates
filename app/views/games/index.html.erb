<div class="container">

  <div class="search d-flex align-items-center p-3">
    <div class="w-25">
      <%= form_tag games_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search for a game"
      %>
    </div>
    <div class="pl-3">
      <%= submit_tag "Search", class: "btn btn-flat" %>
    </div>
    <% end %>
  </div>


  <div class="d-flex flex-wrap justify-content-between mb-4 py-2">
    <% @games.each do |game| %>
      <div class="card d-flex justify-content-between flex-column mb-4" style="width: 250px;">
        <% if game.photo.attached? %>
            <%= cl_image_tag game.photo.key, class: "game-img"%>
        <% else %>
        <% end %>
        <div class="game-info px-4 pb-4 d-flex flex-column">
          <div class="my-2 text text-warning text-center"><%= link_to game.name, game_path(game.id), class: "text text-warning" %></div>
          <div class="badge badge-warning py-1 px-1 my-2 mx-auto <%= game.category %>"> <%= game.category %></div>
          <div> <%= link_to "See open sessions", game_sessions_path, class: "btn btn-details" %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
