<div class="container">

  <div class="search d-flex align-items-center p-3">
    <div class="w-25">
      <%= form_tag games_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search for a game"
      %>
    </div>
    <div class="pl-3">
      <%= submit_tag "Search", class: "btn btn-flat" %>
    </div>
    <% end %>
  </div>

  <div class="d-flex flex-wrap justify-content-around mb-4 py-2">
    <% @games.each do |game| %>
      <div class="card d-flex justify-content-between flex-column mb-4">
        <%
        image = game.photo.attached? ? cl_image_path(game.photo.key, height: 300, width: 300, crop: :fill) : ""
        %>
        <div class="game-img" style="background-image: url(<%= image %>)">
        </div>
        <div class="game-info py-4 px-4">
          <div class="p-2"><h5><%= game.name %></h5></div>
          <div class="p-2"> <%= game.category %></div>
          <div class="p-2"> <%= link_to "Know more", game_path(game.id), class: "btn btn-details" %></div>
          <div class="p-2"> <%= link_to "See open sessions", game_path(game.id), class: "btn btn-details" %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
